<% name ||= "Crear" %>
<h2><%= name %> Articulo</h2>
<%= form_for @article do |f| %>
  <% @article.errors.full_messages.each do |message| %>
  	<div class="error top-space">
  			* <%= message %>
  	</div>
  	<% end %>

    <div class="field">
      <%= f.file_field :cover %>
    </div>

    <div class="field">
   
    	<%= f.text_field :title, placeholder: "Titulo" %>
    	  
    </div>

    <div class="field">
    	
    	<%= f.text_area :body, placeholder: "Escribe aquÃ­ el articulo"%>
    </div>
    <div class="field">
  	<%= f.submit "Guardar" %>
    </div>
    <div class="field">
      <label for="">Categorias </label>
      <% @category.each do |cateory| %>
      <div class="field"> 
        <%= check_box_tag "categories[]",cateory.id %>   <%= cateory.name %>
      </div>
      <% end %>
    </div>


<% end %>